@model Kitap
@{
    ViewData["Title"] = "KitapEkle";
}
<h1 class="display-6">Yeni Kitap Ekle</h1>
<hr>
<form action="KitapEkle" method="post">
    <div class="row mb-2">
        <div class="col-2">
            <label class="form-label" asp-for = "Ad"></label>
        </div>
        <div class="col-4">
            <input class="form-control" type="text" asp-for = "Ad">
        </div>
    </div>

    <div class="row mb-2">
        <div class="col-2">
            <label class="form-label">Basım Yılı</label>
        </div>
        <div class="col-4">
            <input class="form-control" type="text" asp-for = "BasimYili">
        </div>
    </div>

    <div class="row mb-2">
        <div class="col-2">
            <label class="form-label" asp-for = "SayfaSayisi"></label>
        </div>
        <div class="col-4">
            <input class="form-control" type="text" asp-for = "SayfaSayisi">
        </div>
    </div>

    <div class="row mb-2">
        <div class="col-2">
            <label class="form-label" asp-for = "Ozet"></label>
        </div>
        <div class="col-4">
            <input class="form-control" type="text" asp-for = "Ozet">
        </div>
    </div>

    <div class="row mb-2">
        <div class="col-2">
            <label class="form-label">Kategori</label>
        </div>
        <div class="col-4">
            <select class="form-select" aria-label = "Default select example">
            <option selected>Kategori Seçiniz</option>
                @foreach (var kategori in ViewBag.Kategoriler)
                {
                    <option value="@kategori.Id">@kategori.Ad</option> 
                }
            </select>
        </div>
    </div>

</form>