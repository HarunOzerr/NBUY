@model List<CategoryListDto>
<hr />
<div class="row">
    <div class="col-6">
        <a class="btn btn-outline-primary"
           asp-area="Admin"
           asp-controller="Category"
           asp-action="Create">Yeni Kategori Ekle</a>
    </div>
    <div class="col-6">
        <form class="d-flex"
              asp-area="Admin"
              asp-controller="Category"
              asp-action="Search">
            <input class="form-control" style="width:350px;" name="q" placeholder="Ara..." />
            <button class="btn btn-danger ms-2">Ara</button>
        </form>
    </div>
</div>
<hr />
<table class="table table-responsive table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Adı</th>
            <th>Açıklama</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Category.Id</td>
                <td>@category.Category.Name</td>
                <td>@category.Category.Description</td>
                <td>
                    <a class="btn btn-warning btn-sm"
                   asp-area="Admin"
                   asp-controller="Category"
                   asp-action="Edit"
                   asp-route-id=@category.Category.Id>Düzenle</a>
                    <a class="btn btn-danger btn-sm"
                   asp-area="Admin"
                   asp-controller="Category"
                   asp-action="Delete"
                   asp-route-id=@category.Category.Id>Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>