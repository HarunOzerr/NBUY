@model ProductViewModel

<h1>Ürün Detay</h1>
<input type="hidden" name="productId" value="@Model.Id" />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Resim</th>
            <th>Ürün Adı</th>
            <th>Fiyatı</th>
            <th>Açıklama</th>
        </tr>
    </thead>

    <tbody>
        <tr>
            <td>@Model.Id</td>
            <td>
                <img src="http://localhost:5200/images/@Model.ImageUrl" width="50">
            </td>
            <td>@Model.Name</td>
            <td>@($"{Model.Price:C0}")</td>
            <td>@Model.Description</td>
        </tr>
    </tbody>
</table>